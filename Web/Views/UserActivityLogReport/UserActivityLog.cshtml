@{
    ViewBag.Title = "UserActivityLog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Styles/StyleBlue.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    <div class="content-wrapper">
        <section class="content-header">
            <h1>User Activity Log  Report</h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="glyphicon glyphicon-duplicate"></i>Reports</a></li>
                <li><a href="#">User Activity Log Report</a></li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <div>
                                <h5><span class="fields-mandatory">Fields with * are Mandatory</span></h5>
                            </div>
                            <div class="row">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                    <label>Report Type: *</label>
                                </div>
                                <div class="col-md-2">
                                    <select id="ddlUserActivity" class="form-control">
                                        <option value="0">Please Select</option>
                                        <option value="1">User Wise</option>
                                        <option value="2">Site Wise</option>
                                    </select>
                                </div>
                                <div class="col-lg-1 col-lg-offset-0 col-md-6 col-md-offset-2 col-sm-6 col-sm-offset-2 col-xs-10 resizepd btn-group " id="divgo">
                                    <button type="button" id="btnGo" class="btn btn-success btn-ef btn-ef-3 btn-ef-3c" value="Go" data-tooltip="tooltip" title="Go">
                                        <i class="fa fa-arrow-right"></i>Go
                                    </button>
                                </div>
                                
                            </div>
                        </div>

                        <!-- /.box-header -->
                        <div class="box-body" id="dvActivity" style="display:none">
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-sm-2">
                                        <label style="padding-left:10px"><span id="spnactivity"></span></label>
                                    </div>
                                    <div class="col-sm-3">
                                        <select id="ddlUserMst" class="form-control" @*multiple="multiple"*@></select>
                                    </div>
                                </div>
                            </div>
                            <div style="padding-top:10px" class="row">
                                <div class="form-group">
                                    <div class="col-sm-2">
                                        <label style="padding-left:10px">From Date: *</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" id="dFromDate" class="form-control" placeholder="select Date Here." onpaste="return false" onkeydown="return false" autocomplete="off">
                                    </div>
                                    <div class="col-sm-2">
                                        <label>To Date: *</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" id="dToDate" class="form-control" placeholder="select Date Here." onpaste="return false" onkeydown="return false" autocomplete="off">
                                    </div>
                                </div>
                                <div class="form-group">
                                    
                                </div>
                            </div>
                            <div style="padding-top:10px" class="row">
                                <div class="col-sm-12 form-group text-center">
                                    <div class="col-xs-12">
                                        <button type="button" id="btnUserActivity" class="btn btn-success btn-ef btn-ef-3 btn-ef-3c" value="Go" data-tooltip="tooltip" title="Go">
                                            <i class="fa fa-arrow-right"></i>Go
                                        </button>
                                        @*<button type="button" class="btn btn-primary" value='Search' id="btnExport" title="Export To Excel" onclick="ExporttoExcel();"
                                                style="text-transform: inherit; font-size: 13px;">
                                            <i class="fa fa-file-excel-o" aria-hidden="true"></i>&nbsp;Export to Excel
                                        </button>*@
                                        <button type="button" id="btnExitUserActivity" value="Exit" class="btn btn-lightred btn-ef btn-ef-4 btn-ef-4c" role="button" title="Clear">
                                            <i class="fa fa-arrow-left"></i>Exit
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div style="padding-top:20px" class="row">
                                <table id="tblActivityLogMaster" class="table table-striped table-bordered" cellspacing="0" cellpadding="0" border="0" width="100%"></table>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
            </div>
        </section>
    </div>
      <div class="modal fade AlertPopup" id="AlertPopup" role="dialog"></div>
    <script src="@Url.Content("~/Content/themes/plugins/jQuery/jQuery-2.2.0.min.js")"></script>
    <script src="~/Scripts/UserActivityReport.js"></script>
}
