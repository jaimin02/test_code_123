@{
    ViewBag.Title = "View User Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Styles/StyleBlue.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <div class="content-wrapper">
        <section class="content-header">
            <h1>View User Type
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="glyphicon glyphicon-tasks"></i>Master</a></li>
                <li><a href="#">View User Type</a></li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <!-- /.box-header -->
                        <div class="box-body">
                            <div class="row">
                                <div class="col-sm-4 form-group">
                                    <div class="col-sm-12">
                                        <label>Profile For Read Only: *</label>
                                    </div>
                                    <div class="col-sm-12">
                                        <select id="ddlProfileUserWise" multiple="multiple">
                                        </select>
                                    </div>
                                </div>

                                <div class="col-sm-4 form-group">
                                    <div class="col-sm-12">
                                        <label>Profile For Email: *</label>
                                    </div>
                                    <div class="col-sm-12">
                                        <select id="ddlEmailProfile" multiple="multiple">
                                        </select>
                                    </div>
                                </div>

                                <div class="col-sm-4 form-group">
                                    <div class="col-sm-12">
                                        <label>Description : *</label>
                                    </div>
                                    <div class="col-sm-12">
                                        @Html.TextArea("txtDescription", "", new { @class = "form-control", @placeholder = "Description" })
                                    </div>
                                </div>

                            </div>
                            <div class="Row">
                                <div class="col-sm-2 .col-md-offset-1 form-group"></div>
                                <div class="col-md-3 .col-md-offset-3 form-group"></div>
                                <div class="col-md-3 .col-md-offset-3 form-group ">
                                    <a data-toggle="modal" id="btnPMSViewUserType" data-tooltip="tooltip" title="Save" class="viewmode">
                                        <i class="btn btn-success btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                                            <i class="glyphicon glyphicon-floppy-saved"></i><span id="spnPmsStorageType">Save</span></i>
                                    </a>

                                    <a data-toggle="modal" id="btnPMSViewUserTypeClear" data-tooltip="tooltip" title="Clear" onclick="cleardata()">
                                        <i class="btn btn-danger btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                                            <i class="glyphicon glyphicon-refresh"></i><span>Clear</span></i>
                                    </a>

                                    <a data-toggle="modal" id="btnPMSViewUserTypeClearExit" data-tooltip="tooltip" title="Exit">
                                        <i class="btn btn-warning btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                                            <i class="glyphicon glyphicon-floppy-remove"></i><span>Exit</span></i>
                                    </a>

                                </div>
                                
                            </div>
                            <table id="tblViewUserModeUserType" class="table table-bordered table-striped dataTable">
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    
    <div class="modal fade" id="ViewModeUserType" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="Close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title modaltitle text-center">Audit Trail</h4>
                </div>
                <div class="modal-body">
                    <!-- form start -->
                    <div class="box-body">
                        <table id="tblViewModeUserTypeAuditTrial" class="table table-bordered table-striped">
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
        
    </div>

    <div class="modal fade AlertPopup" id="AlertPopup" role="dialog"></div>
    
    <script src="@Url.Content("~/Content/themes/plugins/jQuery/jQuery-2.2.0.min.js")"></script>
    <script src="~/Scripts/PmsViewUserType.js"></script>
}