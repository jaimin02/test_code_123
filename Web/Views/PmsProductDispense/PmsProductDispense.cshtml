@{
    ViewBag.Title = "Product Dispense";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Styles/StyleBlue.css" rel="stylesheet" />
<link href="~/Content/themes/css/CustomStyle.css" rel="stylesheet" />



@using (Html.BeginForm())
{ 
    <input type="hidden" value="@ViewBag.hdnusername" id="hdnusername" />
    <input type="hidden" value="@ViewBag.hdnuserid" id="hdnuserid" />
    <input type="hidden" value="@ViewBag.hdnlogintime" id="hdnlogintime" />
    <input type="hidden" value="@ViewBag.hdnscopevalues" id="hdnscopevalues" />
    
    
  
    <div class="content-wrapper">
        <section class="content-header">
            <h1>Product Dispense
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dropbox"></i>Products</a></li>
                <li><a href="#">Product Dispense</a></li>
                @*<li class="active">Data tables</li>*@
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">
                <div class="col-xs-12">
                    <div class="fancy-collapse-panel">
                        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="headingOne">
                                    <h4 class="panel-title">
                                        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">Define Product  Dispense Detail
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                                    <div class="panel-body">
                                        <div class="box-header">
                                            <div>
                                                <h5><span class="fields-mandatory">Fields with * are Mandatory</span></h5>
                                            </div>
                                        </div>
                                        <div class="box-body" style="overflow-x: hidden">
                                            <div class="col-sm-4 form-group">
                                                <div class="col-sm-12">
                                                    <label>Outer barcode</label>
                                                </div>
                                                <div class="col-sm-12">
                                                    <input type="text" placeholder="Enter Outer barcode" style="padding: 3px 12px; height: 26px" class="form-control" id="txtOuterBarcode">
                                                </div>
                                            </div>

                                            <div class="col-sm-4 form-group">
                                                <div class="col-sm-12">
                                                    <label>Project No *</label>
                                                </div>
                                                <div class="col-sm-12">
                                                    <input type="text" placeholder="Project No Here.." style="padding: 3px 12px; height: 26px" class="form-control" id="DDLProjectNo" data-provide="typeahead" autocomplete="off">
                                                </div>
                                            </div>

                                            <div class="col-sm-4 form-group">
                                                <div class="col-sm-12">
                                                    <label>Product Type *</label>
                                                </div>
                                                <div class="col-sm-12">
                                                    <select class="form-control" id="DDLProductType" style="padding: 3px 12px; height: 26px">
                                                        <option value="0">Please Select Product Type</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-4 form-group">
                                                <div class="col-sm-12">
                                                    <label>Product *</label>
                                                </div>
                                                <div class="col-sm-12">
                                                    <select class="form-control" id="DDLProduct" style="padding: 3px 12px; height: 26px">
                                                        <option value="0">Please Select Product</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-4 form-group">
                                                <div class="col-sm-12">
                                                    <label>Batch/Lot/Lot No *</label>
                                                </div>
                                                @*<div class="col-sm-12">
                                                    @Html.TextBox("txtBatchLotNo", "", new { @class = "form-control", @placeholder = "Batch Lot/No", @readonly = "readonly", required = "required", @style = " height:26px;  ", @autocomplete = "off" })
                                                </div>*@
                                                <div class="col-sm-12">
                                                    <select class="form-control" id="ddlBatchLotNo" style="padding: 3px 12px; height: 26px">
                                                        <option value="0">Please Select Batch/Lot/Lot No</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-4 form-group">
                                                <div class="col-sm-12">
                                                    <label>Period *</label>
                                                </div>
                                                <div class="col-sm-12">
                                                    <select class="form-control" id="DDLPeriod" style="padding: 3px 12px; height: 26px">
                                                        <option value="0">Please Select Period</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-4 form-group">
                                                <div class="col-sm-12">
                                                    <label>Activity *</label>
                                                </div>
                                                <div class="col-sm-12">
                                                    <select class="form-control" id="DDLActivity" style="padding: 3px 12px; height: 26px">
                                                        <option value="0">Please Select Activity</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-sm-4 form-group">
                                                <div class="col-sm-12">
                                                    <label>Dosing Day *</label>
                                                </div>
                                                <div class="col-sm-12">
                                                    <select class="form-control" id="DDLDosingDay" style="padding: 3px 12px; height: 26px">
                                                        <option value="0">Please Select Dosing Day</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-sm-4 form-group">
                                                <div class="col-sm-12">
                                                    <label>Dosing No * </label>
                                                </div>
                                                <div class="col-sm-12">
                                                    <select class="form-control" id="DDLDosingNo" style="padding: 3px 12px; height: 26px">
                                                        <option value="0">Please Select Dosing No</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-4 form-group" style="display: none">
                                                <div class="col-sm-12">
                                                    <label>Dispense Qty/Subject:</label>
                                                </div>
                                                <div class="col-sm-12">
                                                    @Html.TextBox("txtDispenseQty", "", new { @class = "form-control", @placeholder = "Dispense Qty", required = "required", @style = " height:26px;  ", @autocomplete = "off", @type = "number", @min = "0", @disabled = "disabled" })
                                                </div>

                                            </div>
                                            @if (!System.Configuration.ConfigurationManager.AppSettings["UserProfile"].Contains(ViewBag.hdnUserTypeCode))
                                            {
                                                <div class="col-sm-4 form-group">
                                                    <div class="col-sm-12">
                                                        <label>Barcode:</label>
                                                    </div>
                                                    <div class="col-sm-12">
                                                        @Html.TextBox("txtBarcode", "", new { @class = "form-control", @placeholder = "Barcode No Here..", required = "required", @style = " height:26px; ", @autocomplete = "off" })
                                                    </div>
                                                </div>
                                            }
                                            <div class="col-sm-12 form-group">
                                                <div class="col-sm-12 form-group text-center">
                                                    @*
                                                    <button type="button" id="btnGo" class="btn bg-olive " value="Go">GO</button>
                                                    <button type="button" id="btnClear" class="btn btn-danger btn-rounded btn-ef btn-ef-5 btn-ef-5a " value="Clear">Clear</button>
                                                    <button type="button" id="btnExitPage" class="btn btn-warning btn-rounded btn-ef btn-ef-5 btn-ef-5a" value="Exit">Exit</button>*@


                                                    <a data-toggle="modal" id="btnGo" data-tooltip="tooltip" title="Go">
                                                        <i class="btn btn-success btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                                                            <i class="glyphicon glyphicon-floppy-saved"></i><span id="spnGo">Go</span></i>
                                                    </a>

                                                    <a data-toggle="modal" id="btnClear" data-tooltip="tooltip" title="Clear">
                                                        <i class="btn btn-danger btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                                                            <i class="glyphicon glyphicon-refresh"></i><span>Clear</span></i>
                                                    </a>

                                                    <a data-toggle="modal" id="btnExitPage" data-tooltip="tooltip" title="Exit">
                                                        <i class="btn btn-warning btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                                                            <i class="glyphicon glyphicon-floppy-remove"></i><span>Exit</span></i>
                                                    </a>

                                                </div>
                                            </div>
                                            <div>
                                                <input type="hidden" id="txtbarcode" />
                                                <input type="hidden" id="txtprojectno" />
                                                <input type="hidden" id="txtPeriod" />
                                                <input type="hidden" id="txtSubjectNo" />
                                                <input type="hidden" id="txtDoseNo" />
                                                <input type="hidden" id="txtDayNo" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div id="loader" class="modal"></div>

                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="headingTwo">
                                    <h4 class="panel-title">
                                        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">Product Dispense Details
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                                    <div class="panel-body">
                                        <div class="box-body" style="overflow-x: hidden">

                                            <img src="../Content/Images/ColorIndication.png" width="25px" height="25px" onmouseover="$('#divColorIndication').slideDown(1000);" onmouseout="$('#divColorIndication').slideUp(1000);" />
                                            <div id="divColorIndication" style="padding: 0px; width: 100%; display: none;">
                                                <div>
                                                    <span>
                                                        <canvas id="myCanvas1" width="12" height="12" class="highlightDispense"></canvas>
                                                    </span>
                                                    <span class="InActive">Dispense Entries</span>
                                                </div>
                                                <div>
                                                    <span>
                                                        <canvas id="myCanvas" width="12" height="12" class="highlight"></canvas>
                                                    </span>
                                                    <span class="InActive">Delete Entries</span>
                                                </div>
                                                @*<div>
                                                    <span>
                                                        <canvas id="myCanvas" width="12" height="12" class="highlightPendingQA"></canvas>
                                                    </span>
                                                    <span class="InActive">QA Review Approved </span>

                                                </div>
                                                <div>
                                                    <span>
                                                        <canvas id="myCanvas1" width="12" height="12" class="highlightRejectedQA"></canvas>
                                                    </span>
                                                    <span class="InActive">QA Review Rejected</span>
                                                </div>*@
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-12 form-group" id="dispensedata" style="visibility: hidden">
                                                    <table id="tblPmsProductDispenseData" class="table table-bordered table-striped dataTable " style="visibility: hidden">
                                                    </table>

                                                    <div class="row">
                                                        <div class="col-sm-12 form-group text-center">
                                                            <div id="divexport" style="display: none">
                                                                <a class="btn bg-olive" href="../PmsProductDispense/ExportToPDF/hdnworkspaceid">Export to PDF&nbsp&nbsp&nbsp<i class="fa fa-file-pdf-o"></i></a>
                                                            </div>
                                                            <br />
                                                            
                                                                 @*<button type="button" id="btnExit" class="btn bg-olive margin" value="save">Exit</button>*@
                                                            
                                                                @if (System.Configuration.ConfigurationManager.AppSettings["UserProfile"].Contains(ViewBag.hdnUserTypeCode))
                                                                {
                                                                    <a data-toggle="modal" data-tooltip="tooltip" title="QA/QC Review" class="btnview" onclick="pmsStudyViewAuthenticate(this)" style="cursor: pointer;">
                                                                        <i class="btn btn-primary btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                                                                            <i class="fa fa-star"></i>
                                                                            <span>QA/QC Review</span></i></a>
                                                            
                                                                }
                                                            
                                                            

                                                            @Html.Raw(ViewBag.htmlBarcode)
                                                        

                                                    </div>
                                                    <div class="row" id="Div_Barcode" style="display: none;">
                                                    </div>
                                                </div>


                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                    <!-- panel-group -->
                </div>
            </div>
        </section>
    </div>
    
    <div class="modal fade" id="ViewProductdetail" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="Close" data-dismiss="modal" aria-hidden="true" id="btnClose1" title="Close" data-tooltip="tooltip">×</button>
                    @*
                    <button type="reset" class="close" id="btnReset" value="Mode - ADD" title="Mode - Add">Moe</button>*@
                    <h4 class="modal-title text-center" id="myModalLabel1">Product Detail</h4>
                </div>
                <div class="modal-body">
                    <div>

                        <table id="tblProductDetail" class="table table-bordered table-striped dataTable">
                            @*
                            <thead>
                                <tr>

                                    <th>Product Name </th>
                                    <th>Batch/LotNo </th>
                                    <th>Qty </th>
                                </tr>
                            </thead>*@
                            @*
                            <tbody class="TbodyProductDispensedetail">
                            </tbody>*@
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="modal fade " id="RemarksModal" role="dialog">
        <div class="modal-dialog modal-sm">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Remarks For Re-Dispensing</h4>
                </div>
                <div class="modal-body">
                    <div class="col-sm-12">
                        <label>Quantity: </label>
                        <label id="lblReDispensingQty"></label>
                    </div>
                    @Html.TextArea("txtRemarks", "", new { @class = "form-control", @placeholder = "Remarks", required = "required", @autocomplete = "off" })
                </div>
                <div class="modal-footer">
                    @*
                    <button type="button" class="btn btn-success btn-rounded btn-ef btn-ef-5 btn-ef-5a" id="btnSaveRemarks">Save</button>
                    <button type="button" class="btn btn-warning btn-rounded btn-ef btn-ef-5 btn-ef-5a" id="btnCloseRemarks">Close</button>*@

                    <a data-toggle="modal" id="btnSaveRemarks" data-tooltip="tooltip" title="Save">
                        <i class="btn btn-success btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                            <i class="glyphicon glyphicon-floppy-saved"></i><span id="spnSaveRemarks">Save</span></i>
                    </a>

                    <a data-toggle="modal" id="btnCloseRemarks" data-tooltip="tooltip" title="Close" data-dismiss="modal">
                        <i class="btn btn-warning btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                            <i class="glyphicon glyphicon-floppy-remove"></i><span>Close</span></i>
                    </a>
                </div>
            </div>

        </div>
    </div>
    
    <div class="modal fade" id="ViewAuthenticate" role="dialog">
        <div class="modal-dialog" style="width: 400px">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="Close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Authenticate</h4>
                </div>
                <div class="modal-body">
                    <div class="col-sm-12">
                        <label>Remarks *</label>
                    </div>
                    <div class="col-sm-12">
                        @Html.TextArea("txtRemark", "", new { @class = "form-control", @placeholder = "Remarks", required = "required", @autocomplete = "off" })
                    </div>
                    <div class="col-sm-12">
                        <label>Password *</label>
                    </div>
                    <div class="col-sm-12">
                        @Html.Password("txtPassword", "", new { @class = "form-control", @placeholder = "Password", required = "required", @autocomplete = "off" })
                    </div>

                    <div class="col-sm-12">
                        <hr style="margin-bottom: 10px" />
                    </div>

                    <div class="col-sm-12" style="margin-bottom: 20px">
                        I hereby confirm signing of this record electronically. 
                    </div>
                </div>
                <div class="modal-footer">
                    <a data-toggle="modal" id="btnOk" data-tooltip="tooltip" title="Approve">
                        <i class="btn btn-success btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                            <i class="fa fa-check"></i><span id="spnSaveRemarks">Approve</span></i>
                    </a>

                    <a data-toggle="modal" id="btnCancel" data-tooltip="tooltip" title="Reject" onclick="QaReviewReject()">
                        <i class="btn btn-warning btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                            <i class="fa fa-ban"></i><span>Reject</span></i>
                    </a>
                    <a data-toggle="modal" id="btnCancel" data-tooltip="tooltip" title="Close" data-dismiss="modal">
                        <i class="btn btn-warning btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                            <i class="glyphicon glyphicon-floppy-remove"></i><span>Close</span></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="hdnPassword" value="@ViewBag.vLoginPass"/>
    <div class="modal fade AlertPopup" id="AlertPopup" role="dialog"></div>
    
    <input id="hdnUserProfile" type="hidden" value="@System.Configuration.ConfigurationManager.AppSettings["UserProfile"].ToString()" />
    <script src="@Url.Content("~/Content/themes/plugins/jQuery/jQuery-2.2.0.min.js")"></script> 
    <script src="~/Scripts/Validation.js"></script>
    <script src="~/Scripts/PmsProductDispense.js"></script>
    <script src="~/Scripts/BarcodeTimer.js"></script>
}
