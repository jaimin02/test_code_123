@{
    ViewBag.Title = "Kit Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Styles/StyleBlue.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <div class="content-wrapper">
        <section class="content-header">
            <h1>Weekly Pending Visit Wise Kit Report</h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="glyphicon glyphicon-duplicate"></i>Reports</a></li>
                <li><a href="#">Kit Report</a></li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <div class="row">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                    <h3 class="box-title">Project No</h3>
                                </div>
                                <div class="col-lg-4 col-md-8 col-sm-8 col-xs-8">
                                    <input type="text" id="ddlProjectNo" placeholder="Project No.." data-provide="typeahead" class="form-control" />
                                </div>

                                <div class="col-lg-3 col-lg-offset-0 col-md-6 col-md-offset-2 col-sm-6 col-sm-offset-2 col-xs-10 resizepd btn-group " id="divexport" style="display:none" >
                                        <button type="button" class="btn bg-olive dropbtn dropdown-toggle btn-rounded  btn-ef btn btn-primary"
                                            data-toggle="dropdown" aria-expanded="false" style="border-radius: 4px">
                                            Export <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="../PMSKitReport/ExportToExcel"><i class="fa fa-file-excel-o"></i>Excel </a></li>
                                            <li><a href="../PMSKitReport/ExportToPDF"><i class="fa fa-file-pdf-o"></i>PDF</a></li>
                                        </ul>
                                    </div>
                            </div>
                        </div>

                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="tblPmsKitReportData" class="table table-bordered table-striped">
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
            </div>
        </section>
    </div>

    <div class="modal fade AlertPopup" id="AlertPopup" role="dialog"></div>

    <script src="@Url.Content("~/Content/themes/plugins/jQuery/jQuery-2.2.0.min.js")"></script>
    <script src="~/Scripts/PmsKitReport.js"></script>
}