@{
    ViewBag.Title = "Storage Area";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Styles/StyleBlue.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <div class="content-wrapper">
        <section class="content-header">
            <h1>Storage Area
                <small></small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="glyphicon glyphicon-tasks"></i>Master</a></li>
                <li><a href="#">Storage Area</a></li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <span><canvas id="myCanvas" width="12" height="12" class="highlight"></canvas></span>
                                <span class="InActive">Inactive Entries</span>

                            <div class="row">
                                <button type="button" id="btnAddUser" class="btn bg-olive margin viewmode" data-toggle="modal" 
                                    data-target="#StorageAreaModel" title="Add Storage Area" onclick="StorageArea()">+ Add Storage Area</button>
                            </div>
                        </div>

                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="tblPmsStorageAreaData" class="table table-striped table-bordered" cellspacing="1" width="100%">
                                @*class="display nowrap" cellspacing="0" width="100%">*@
                                <tbody class="TbodyStorageArea">
                                </tbody>
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
            </div>
        </section>
    </div>   
    <div class="modal fade" id="StorageAreaModel" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            @*<div class='DTED_Lightbox_Content' style='height: auto;'>*@
            <div class="modal-content modal-content-AlertPromt">
                <div class="modal-header">
                    <div>
                        <button type="button" class="Close" data-dismiss="modal">&times;</button>
                        <span class="operation-mode" style="float: right" id="titleMode"></span>
                        <h4 class="modal-title modaltitle operation-name" id="title">Storage Area</h4>
                    </div>
                    <div>
                        <h5><span class="fields-mandatory">Fields with * are Mandatory</span></h5>
                    </div>
                </div>
                <div class="modal-body">
                    <!-- form start -->
                    <form role="form" class="form-horizontal" method="POST" id="testForm">
                        <div class="col-sm-4 form-group">
                            <div class="col-sm-12">
                                <label>Storage Type *</label>
                            </div>
                            <div class="col-sm-10">
                                <select class="form-control" id="ddlStorageType" style="padding: 3px 12px; height: 26px">
                                    <option selected value="0">Please Select Storage Type</option>
                                </select>
                            </div>
                            <div class="col-sm-2">
                                <span class="fa fa-fw fa-file-text-o AuditControl" title="Audit Trail" id="spn_vStorageType" onclick="AuditTrail(this)" data-toggle="modal" data-target="#StorageAreaAuditTrial" titlename="Storage Type"></span>
                            </div>
                        </div>
                        <div class="col-sm-4 form-group">
                            <div class="col-sm-12">
                                <label>Storage Location *</label>
                            </div>
                            <div class="col-sm-10">
                                <select class="form-control" id="ddlStorageLocation" style="padding: 3px 12px; height: 26px">
                                    <option selected value="0">Please Select Storage Location</option>
                                </select>
                            </div>
                            <div class="col-sm-2">
                                <span class="fa fa-fw fa-file-text-o AuditControl" title="Audit Trail" id="spn_vStorageLocationName" onclick="AuditTrail(this)" data-toggle="modal" data-target="#StorageAreaAuditTrial" titlename="Storage Location"></span>
                            </div>
                        </div>
                        <div class="col-sm-4 form-group">
                            <div class="col-sm-12">
                                <label>Location Type *</label>
                            </div>
                            <div class="col-sm-10">
                                <select class="form-control" id="ddlLocationType" style="padding: 3px 12px; height: 26px">
                                    <option selected value="0">Please Select Location Type</option>
                                </select>
                            </div>
                            <div class="col-sm-2">
                                <span class="fa fa-fw fa-file-text-o AuditControl" title="Audit Trail" id="spn_cStorageLocationType" onclick="AuditTrail(this)" data-toggle="modal" data-target="#StorageAreaAuditTrial" titlename="Location Type"></span>
                            </div>
                        </div>
                        

                        <div class="col-sm-4 form-group">
                        </div>

                        <div class="clearfix"></div>
                        <hr>

                        <div class="col-sm-4 form-group">
                            <div class="col-sm-12">
                                <label>Storage Area *</label>
                            </div>
                            <div class="col-sm-10">
                                @Html.TextBox("txtStorageArea", "", new { @class = "form-control", @placeholder = "Storage Area..", @style = " height:26px; ", @autocomplete = "off" })
                            </div>
                            <div class="col-sm-2">
                                <span class="fa fa-fw fa-file-text-o AuditControl" title="Audit Trail" id="spn_vStorageAreaName" onclick="AuditTrail(this)" data-toggle="modal" data-target="#StorageAreaAuditTrial" titlename="Storage Area"></span>
                            </div>
                        </div>
                        <div class="col-sm-4 form-group">
                            <div class="col-sm-12">
                                <label>Compartment *</label>
                            </div>
                            <div class="col-sm-10">
                                @Html.TextBox("txtCompartment", "", new { @class = "form-control", @placeholder = "Compartment Here..", @style = " height:26px; ", @autocomplete = "off" })
                            </div>
                            <div class="col-sm-2">
                                <span class="fa fa-fw fa-file-text-o AuditControl" title="Audit Trail" id="spn_vCompartmentName" onclick="AuditTrail(this)" data-toggle="modal" data-target="#StorageAreaAuditTrial" titlename="Compartment"></span>
                            </div>
                        </div>


                        <div class="col-sm-4 form-group">
                            <div class="col-sm-12">
                                <label>Rack *</label>
                            </div>
                            <div class="col-sm-10">
                                @Html.TextBox("txtRack", "", new { @class = "form-control", @placeholder = "Rack Here..", @style = " height:26px; ", @autocomplete = "off" })
                            </div>
                            <div class="col-sm-2">
                                <span class="fa fa-fw fa-file-text-o AuditControl" title="Audit Trail" id="spn_vRackName" onclick="AuditTrail(this)" data-toggle="modal" data-target="#StorageAreaAuditTrial" titlename="Rack"></span>
                            </div>
                        </div>

                        <div id="divRemarkStorageArea" style="display: none">
                            <div class="col-sm-4 form-group">
                                <div class="col-sm-12">
                                    <label>Remarks *</label>
                                </div>
                                <div class="col-sm-12">
                                    @Html.TextArea("txtRemarks", "", new { @class = "form-control", @placeholder = "Remarks", @autocomplete = "off" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12 form-group text-center">
                                <div class="col-xs-12">
                                    <a id="btnAddLot" onclick="AddTempPmsStorageArea()" title="Add" class="btn btn-primary btn-rounded btn-ef btn-ef-5 btn-ef-5a bg-olive margin">
                                        <i class="fa fa-plus"></i><span>Add</span></a>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-sm-12" style="text-align: center">
                                    <table id="tblStorageArea" border="1" class="table table-bordered table-striped dataTable no-footer" style="width: 80%; margin-left: 10%" onclick="AddPMsStorageAreaTemp">
                                        <thead>
                                            <tr>
                                                <td>Storage Location</td>
                                                <td>Storage Type</td>
                                                <td>Storage Area</td>
                                                <td>Compartment</td>
                                                <td>Rack</td>
                                                <td class="hidetd">LocationNo</td>
                                                <td class="hidetd">TypeNo</td>
                                                <td id="trRemove">Remove</td>
                                            </tr>
                                        </thead>
                                        <tbody id="tbodyStorageArea">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- /.box-body -->
                </div>
                <div class="modal-footer footer-bottom">
                    @*<button type="button" id="btnaddPmsStorageArea" class="btn btn-success btn-rounded btn-ef btn-ef-5 btn-ef-5a" value="save" data-tooltip="tooltip" style="display: none">Save</button>
                    <input type="button" id="btnClearPmsStorageArea" value="Clear" class="btn btn-danger btn-rounded btn-ef btn-ef-5 btn-ef-5a" role="button" title="Clear">
                    <input type="button" id="btnExitPmsStorageArea" value="Exit" class="btn btn-warning btn-rounded btn-ef btn-ef-5 btn-ef-5a" role="button" title="Exit">*@

                    <a data-toggle="modal" id="btnaddPmsStorageArea" data-tooltip="tooltip" title="Save" >
                                    <i class="btn btn-success btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                                        <i class="glyphicon glyphicon-floppy-saved"></i><span id="spnaddPmsStorageArea">Save</span></i>
                     </a>                      

                     <a data-toggle="modal" id="btnClearPmsStorageArea" data-tooltip="tooltip" title="Clear" >
                                    <i class="btn btn-danger btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                                        <i class="glyphicon glyphicon-refresh"></i><span>Clear</span></i>
                     </a>                                

                     <a data-toggle="modal" id="btnExitPmsStorageArea" data-tooltip="tooltip" title="Exit" >
                                    <i class="btn btn-warning btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                                        <i class="glyphicon glyphicon-floppy-remove"></i><span>Exit</span></i>
                     </a>                  

                </div>

            </div>

        </div>
        <div id="loader" class="modal"></div> 
    </div>
    <div class="modal fade" id="StorageAreaAuditTrial" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="Close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title modaltitle text-center">Audit Trail</h4>
                </div>
                <div class="modal-body">
                    <!-- form start -->
                    <div class="box-body">
                        <table id="tblPmsStorageAreaAuditTrial" class="table table-bordered table-striped">
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <div class="modal-footer">
                </div>

            </div>

        </div>
    </div>
    
    <div class="modal fade" id="StorageAreaInctive" role="dialog">
        <div class="modal-dialog modal-sm">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="Close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Remarks</h4>
            </div>
            <div class="modal-body">
                @Html.TextArea("txtReason", "", new { @class = "form-control", @placeholder = "Remarks", @autocomplete = "off" })
            </div>
            <div class="modal-footer">
                <a data-toggle="modal" id="btnInActiveSave" data-tooltip="tooltip" title="Save">
                        <i class="btn btn-success btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                        <i class="glyphicon glyphicon-floppy-saved"></i><span id="spnSave1">Save</span></i>
                    </a>
            </div>
          </div>
        </div>
    </div>
    
    <div class="modal fade AlertPopup" id="AlertPopup" role="dialog"></div>
}

@*<script src="/Content/themes/plugins/jQuery/jQuery-2.2.0.min.js"></script>*@
<script src="@Url.Content("~/Content/themes/plugins/jQuery/jQuery-2.2.0.min.js")"></script>
<script src="~/Scripts/PmsStorageArea.js"></script>



