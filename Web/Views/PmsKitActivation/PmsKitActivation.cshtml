@{
    ViewBag.Title = "Kit Activation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .btn-group {
        width: 335px;
    }

    .multiselect-container {
        width: 335px !important;
    }

    .caret {
        float: right;
        margin-top: 10px;
    }

    .multiselect {
        text-align: left;
    }
    .ui-datepicker {
        background:#fff;
        border:1px solid #ccc;
        padding:5px;
        z-index:10;
    }
    .ui-datepicker-calendar {
    width:200px;
    }
    .ui-datepicker-next {
        float:right;
    }
</style>

@using (Html.BeginForm())
{
    <div class="content-wrapper">
        <section class="content-header">
            <h1>Kit Activation
                <small></small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-medkit"></i>Kit</a></li>
                <li><a href="#">Kit Activation</a></li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-body">
                            <div class="box-header">
                                <h5><span style="font-size: 12px; float: right">Fields with * are Mandatory</span></h5>
                            </div>
                            <div class="col-sm-4 form-group">
                                <div class="col-sm-12">
                                    <label>Project No *</label>
                                </div>
                                <div class="col-sm-12">
                                    <input type="text" placeholder="Project No Here.." style="height: 26px;" class="form-control" id="DDLProjectNo">
                                </div>
                            </div>

                            <div class="col-sm-4 form-group">
                                <div class="col-sm-12">
                                    <label>Kit Indication *</label>
                                </div>
                                <div class="col-sm-12">
                                    <select class="form-control" id="ddlTransferIndi" style="padding: 3px 12px; height: 26px">
                                        <option selected="selected" value="0">Please Select Kit Indication</option>
                                        <option value="K">Kit</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-sm-4 form-group">
                                <div class="col-sm-12">
                                    <label>Product Type *</label>
                                </div>
                                <div class="col-sm-12">
                                    <select class="form-control" id="ddlProductType" style="padding: 3px 12px; height: 26px">
                                        <option selected="selected" value="0">Please Select Product Type</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-sm-4 form-group">
                                <div class="col-sm-12">
                                    <label>Product *</label>
                                </div>
                                <div class="col-sm-12">
                                    <select class="form-control" id="ddlProduct" style="padding: 3px 12px; height: 26px">
                                        <option selected="selected" value="0">Please Select Product</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-sm-4 form-group">
                                <div class="col-sm-12">
                                    <label>Kit *</label>
                                </div>
                                <div class="col-sm-12" style="height: 26px !important;">
                                    <select class="form-control" id="ddlKit" style="padding: 3px 12px; height: 26px" multiple="multiple">
                                        <option selected="selected" value="0">Please Select Kit</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-sm-4 form-group">
                                <div class="col-sm-12">
                                    <label>Batch/Lot/Lot No *</label>
                                </div>
                                <div class="col-sm-12">
                                    <select class="form-control" id="ddlBatchLot" style="padding: 3px 12px; height: 26px">
                                        <option selected value="0">Please Select Batch/Lot/Lot No</option>
                                    </select>

                                </div>
                            </div>

                            <div class="col-sm-4 form-group">
                                <div class="col-sm-12">
                                    <label>Expiry Date *</label>
                                </div>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control pull-right" id="ExpiryDate" placeholder="Expiry Date" style="height: 26px" onpaste="return false" autocomplete="off">
                                </div>
                            </div>

                            <div class="col-sm-4 form-group">
                                <div class="col-sm-12">
                                    <label>Remarks *</label>
                                </div>
                                <div class="col-sm-12">
                                    @Html.TextArea("txtRemarks", "", new { @class = "form-control", @placeholder = "Remarks",@maxlength="200", @autocomplete="off" })
                                    <span id="rchars">200</span> Character(s) Remaining
                                </div>
                            </div>

                            <div class="row" style="display: flex; width: 100%;">
                                <div class="col-md-2 .col-md-offset-3 form-group"></div>
                                <div class="col-md-2 .col-md-offset-3 form-group text-right"></div>

                                <div class="col-md-3 .col-md-offset-3 form-group">
                                    <a data-toggle="modal" id="btnSaveKitActivation" data-tooltip="tooltip" title="Upload" class="viewmode">
                                        <i class="btn btn-success btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                                            <i class="fa fa-upload"></i><span id="spnbtnGO">Save</span></i>
                                    </a>

                                    <a data-toggle="modal" id="btnClearKitActivation" data-tooltip="tooltip" title="Clear" onclick="clearControl();">
                                        <i class="btn btn-danger btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                                            <i class="glyphicon glyphicon-refresh"></i><span>Clear</span></i>
                                    </a>

                                    <a data-toggle="modal" id="btnExitKitActivation" data-tooltip="tooltip" title="Exit">
                                        <i class="btn btn-warning btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                                            <i class="glyphicon glyphicon-floppy-remove"></i><span>Exit</span></i>
                                    </a>

                                    <a data-toggle="modal" id="btnKitAudit" data-tooltip="tooltip" title="Exit">
                                        <i class="btn btn-primary btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                                            <i class="glyphicon glyphicon-floppy-remove"></i><span>Audit</span></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </div>
    
    <div class="modal fade" id="KitActivationDetails" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <div>
                        <button type="button" class="Close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title modaltitle operation-name" style="margin-left: 40%">Audit Trial</h4>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="col-sm-4 form-group">
                        <div class="col-sm-12">
                            <label>Start Date *</label>
                        </div>
                        <div class="col-sm-12">
                            <input type="text" class="form-control pull-right" id="StartDate" placeholder="Start Date" style="height: 26px" onpaste="return false"  autocomplete="off">
                        </div>
                    </div>
                    <div class="col-sm-4 form-group">
                        <div class="col-sm-12">
                            <label>End Date *</label>
                        </div>
                        <div class="col-sm-12">
                            <input type="text" class="form-control pull-right" id="EndDate" placeholder="End Date" style="height: 26px" onpaste="return false" autocomplete="off">
                        </div>
                    </div>
                    <div class="col-sm-4 form-group">
                        <a data-toggle="modal" id="btnGoKitActivation" data-tooltip="tooltip" title="Upload" class="viewmode">
                            <i class="btn btn-success btn-rounded btn-ef btn-ef-5 btn-ef-5a" style="margin-top: 20px;">
                                <i class="fa fa-upload"></i><span id="spnbtnGOAudit">Go</span></i>
                        </a>
                    </div>
                    <br />
                    <br />
                    <table id="tblKitActivationDetails" class="table table-bordered table-striped">
                    </table>
                </div>
                <div class="modal-footer footer-bottom">

                    <a data-toggle="modal" id="btnExitPmsKitCreationDetails" data-tooltip="tooltip" title="Exit" onclick="ConfirmAlertBox(ModuleName);">
                        <i class="btn btn-warning btn-rounded btn-ef btn-ef-5 btn-ef-5a">
                            <i class="glyphicon glyphicon-floppy-remove"></i><span>Exit</span></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="modal fade AlertPopup" id="AlertPopup" role="dialog"></div>
    
    <script src="@Url.Content("~/Content/themes/plugins/jQuery/jQuery-2.2.0.min.js")"></script>
    <script src="~/Scripts/PmsKitActivation.js"></script>
}

